<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout5">

    <androidx.constraintlayout.widget.Placeholder
            android:id="@+id/placeholder"
            android:layout_width="48dp"
            android:layout_height="48dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>

    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@android:drawable/ic_delete"
            android:id="@+id/imageView"
            android:layout_marginBottom="32dp"
            app:layout_goneMarginBottom="32dp"
            android:onClick="swapView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintHorizontal_chainStyle="spread"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageView3"
            app:layout_goneMarginBottom="32dp"
            android:onClick="swapView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@android:drawable/ic_notification_overlay"
            android:id="@+id/imageView4"
            app:layout_goneMarginBottom="32dp"
            android:onClick="swapView"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@android:drawable/presence_away"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="swapView"
            android:layout_marginBottom="32dp"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/imageView6"
            app:layout_goneMarginBottom="32dp"
                android:onClick="swapView"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>