<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="@dimen/dp_4"
    app:elevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">

        <ImageView
            android:id="@+id/image_profile_completed"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:minWidth="@dimen/dp_50"
            android:minHeight="@dimen/dp_50"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_profile_progress"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_big_notif_customerapp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/circular_progress_bar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:rotation="-90"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:progress="55" />

        <ImageView
            android:id="@+id/ic_affiliate_byme"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:clickable="false"
            android:focusable="false"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/text_username"
            app:layout_constraintStart_toEndOf="@+id/image_profile_progress"
            app:layout_constraintTop_toTopOf="@+id/text_username"
            app:srcCompat="@drawable/ic_byme_blue"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/text_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:maxLines="1"
            android:text="Young Lex Le Bron James Syaiful Amir Hutagalung"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ic_affiliate_byme"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_profile_completion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelengkapan Profile 75%"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/text_username"
            app:layout_constraintTop_toBottomOf="@+id/text_username" />

        <TextView
            android:id="@+id/by_me_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/bg_button_white_border"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:text="@string/curate_product_by_me"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_11"
            app:layout_constraintTop_toBottomOf="@+id/image_profile_progress" />

        <ImageView
            android:id="@+id/image_tokopoint"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="@+id/text_tokopoint_amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/label_tokopoint"
            app:srcCompat="@drawable/ic_tokopoint" />

        <TextView
            android:id="@+id/label_tokopoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/label_user_tokopoint"
            app:layout_constraintStart_toEndOf="@+id/image_tokopoint"
            app:layout_constraintTop_toBottomOf="@+id/by_me_button" />

        <TextView
            android:id="@+id/text_tokopoint_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:clickable="false"
            android:focusable="false"
            android:text="50.000 pt"
            app:layout_constraintStart_toEndOf="@+id/image_tokopoint"
            app:layout_constraintTop_toBottomOf="@+id/label_tokopoint" />


        <View
            android:id="@+id/holder_tokopoint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/text_tokopoint_amount"
            app:layout_constraintEnd_toEndOf="@+id/label_tokopoint"
            app:layout_constraintStart_toStartOf="@+id/image_tokopoint"
            app:layout_constraintTop_toTopOf="@+id/label_tokopoint" />

        <View
            android:id="@+id/divider"
            android:layout_width="0.5dp"
            android:layout_height="32dp"
            android:background="@color/white_two"
            app:layout_constraintBottom_toBottomOf="@+id/holder_tokopoint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/holder_tokopoint" />


        <ImageView
            android:id="@+id/image_voucher"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="@+id/text_voucher_amount"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintTop_toTopOf="@+id/label_voucher"
            app:srcCompat="@drawable/ic_account_voucher" />

        <TextView
            android:id="@+id/label_voucher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/dp_16"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/label_user_voucher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_voucher"
            app:layout_constraintTop_toBottomOf="@+id/by_me_button" />

        <TextView
            android:id="@+id/text_voucher_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/label_tokopoint_see_voucher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_voucher"
            app:layout_constraintTop_toBottomOf="@+id/label_voucher" />


        <View
            android:id="@+id/holder_coupon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/text_voucher_amount"
            app:layout_constraintEnd_toEndOf="@+id/text_voucher_amount"
            app:layout_constraintStart_toStartOf="@+id/image_voucher"
            app:layout_constraintTop_toTopOf="@+id/label_voucher" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Transaksi"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/holder_tokopoint"
            app:layout_constraintTop_toBottomOf="@+id/text_tokopoint_amount" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/title_menu_waiting_for_payment"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_menu_waiting_for_payment"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <View
            android:id="@+id/divider_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/white_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/title_menu_other_transaction"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/divider_view" />

        <ImageView
            android:id="@+id/btn_go_to_payment"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:srcCompat="@drawable/ic_big_notif_customerapp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_go_to_payment"
            app:layout_constraintTop_toTopOf="@+id/btn_go_to_payment"
            app:srcCompat="@drawable/ic_big_notif_customerapp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:srcCompat="@drawable/ic_big_notif_customerapp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/btn_go_to_payment"
            app:srcCompat="@drawable/ic_big_notif_customerapp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
